<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.CarRentalController">
    <TextField fx:id="carIdField" promptText="Enter Car ID"/>
    <TextField fx:id="carModelField" promptText="Enter Car Model"/>
    <TextField fx:id="rentalDurationField" promptText="Enter Rental Duration (Days)"/>
    <Button text="Add Car" onAction="#handleAddCar"/>
    <Button text="Rent Car" onAction="#handleRentCar"/>
    <Button text="Return Car" onAction="#handleReturnCar"/>
    <Button text="View Available Cars" onAction="#handleViewCars"/>
    <Label fx:id="carDetailsLabel"/>
</VBox>
